<div class="container-fluid m-3">

  <div class="row">
    <form id="currencies" action="/fork/find_forks" data-remote="true">
      <div id="pairs" class="form-group">
        <%= label_tag('Selected Pairs', 'Selected Pairs:  ', class: 'font-weight-bold') %>
        <% @pairs.group_by {|s| s.split('_').first }.each do |currency, pairs| %>
            <div class="form-group">
              <%= label_tag(currency, currency + ':  ', class: 'font-weight-bold col-sm-2 col-form-label') %>
              <% pairs.each do |pair| %>
                  <% from, to =  pair.split('_') %>
                  <div class="form-check form-check-inline">
                    <%= check_box_tag('pairs[]', pair, true, class: "#{from} #{to}") %>
                    <%= label_tag(pair, pair) %>
                  </div>
              <% end %>
            </div>
        <% end %>
      </div>

      <div id="selected_currencies" class="form-group">
        <%= label_tag('Selected Currencies', 'Selected Currencies:  ', class: 'font-weight-bold col-sm-2 col-form-label') %>
        <% @currencies.each do |cur| %>
            <div class="form-check form-check-inline">
              <%= check_box_tag('currencies[]', cur.name, true) %>
              <%= label_tag(cur.name, cur.name) %>
            </div>
        <% end %>
      </div>

      <div class="form-group">
        <%= label_tag('Cicle Currency', 'Cicle Currency:', class: 'font-weight-bold col-sm-2 col-form-label') %>
        <% @currencies.each do |cur| %>
            <div class="form-check form-check-inline">
              <%= radio_button_tag('currency', cur.name, false) %>
              <%= label_tag(cur.name, cur.name) %>
            </div>
        <% end %>
      </div>

      <div class="form-group ">
        <%= label_tag('Profit', 'Profit %:', class: 'font-weight-bold col-sm-2 col-form-label') %>
        <%= number_field_tag('profit', 5, min: 1, max: 10, step: 0.1) %>
      </div>

      <div class="form-group ">
        <%= label_tag('Exchanges', 'Exchanges from:', class: 'font-weight-bold col-sm-2 col-form-label') %>
        <%= number_field_tag('exchanges_from', nil, min: 2, max: 50, step: 1) %>
        <%= label_tag('To', 'To', class: 'font-weight-bold') %>
        <%= number_field_tag('exchanges_to', nil, min: 2, max: 50, step: 1) %>
      </div>

      <button type="submit" class="btn btn-primary">Scan</button>
    </form>
  </div>


  <div class="row mt-5">
    <div id="forks" class="col-md-6">
      <%= render partial: 'fork/forks', locals: {forks: []}%>
    </div>
    <div id="details" class="col-md-6">

    </div>

  </div>
</div>